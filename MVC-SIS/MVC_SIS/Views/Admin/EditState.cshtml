@model Exercises.Models.Data.State
@{
    ViewBag.Title = "EditState";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3>Edit State</h3>
            @Html.ActionLink("Return to List", "States", "Admin")
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>State Abbreviation</label><br />
                    @Html.DisplayFor(m => m.StateAbbreviation, new { @class = "form-control", disable = "disabled" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.StateAbbreviation)</span>

                </div>
                <div class="form-group">
                    <lable>State Name</lable>
                    @Html.TextBoxFor(m => m.StateName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.StateName)</span>

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>
