@model Exercises.Models.Data.State

@{
    ViewBag.Title = "AddState";
}


<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3>Add State</h3>
            @Html.ActionLink("Return to List", "States", "Admin")
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("AddState", "Admin", FormMethod.Post))
            {
            <div class="form-group">
                <div>
                    <lable>State Abbreviation</lable>
                    @Html.TextBoxFor(m => m.StateAbbreviation, new { @class = "form-control", placeholder = "State Abbreviation" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.StateAbbreviation)</span>

                </div>
                <div>
                    <lable>State Name</lable>
                    @Html.TextBoxFor(m => m.StateName, new { @class = "form-control", placeholder = "State Name" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.StateName)</span>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-primary">Save</button>
            </div>
            }
        </div>
    </div>
</div>
